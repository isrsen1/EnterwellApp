@model IEnumerable<EnterwellApp.Presentation.Models.ProductVM>

@{
    ViewBag.Title = "ViewAll";
    
}

<h2>ViewAll</h2>



<table class="table table-striped table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPriceNoTax)
        </th>
       
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPriceNoTax)
                </td>
                
                <td>
                    <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "Product", new { id=item.Id})')"><i class="fa fa-pencil fa-lg"></i></a>
                    <a class="btn btn-danger btn-sm" onclick="Edit('@Url.Action("Delete", "Product", new { id=item.Id})')"><i class="fa fa-trash fa-lg"></i></a>
                </td>
            </tr>
        }
    }
    </table>
